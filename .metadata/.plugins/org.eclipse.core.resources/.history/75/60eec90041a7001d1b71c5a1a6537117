package template;

public class SingletonWawita {

	// 1st step ---> Same type attribute
	private SingletonWawita singletonWawita = null;

	// 2nd Private constructor
	private SingletonWawita() {
		System.out.println("Un singleton solo debería crearse una sola vez");
	}

	// 3rd Global access
	public static SingletonWawita getSingletonWawtita() {
		if (singletonWawita != null) {
			singletonWawita = new SingletonWawita();
		}
		return singletonWawita;
	}

	public void getName() {
		System.out.println("El Singleton está VIVO!");
	}
}
